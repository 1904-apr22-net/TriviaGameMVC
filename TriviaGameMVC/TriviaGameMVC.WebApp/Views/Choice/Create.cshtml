@model TriviaGameMVC.WebApp.Models.ChoiceViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ChoiceViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionId" class="control-label"></label>
                @*@{
                        object displayMode = (Model.QuestionId) ? null : new { disabled = "disabled" };
                        @Html.TextBox("CompanyName", "", displayMode)
                    }*@
                <input type="text" asp-for="QuestionId" class="form-control"  readonly="readonly" />
                <span asp-validation-for="QuestionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correct" class="control-label"></label>
                <input type="checkbox" name="Correct" value="true" checked />
                <span asp-validation-for="Correct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChoiceString" class="control-label"></label>
                <input asp-for="ChoiceString" class="form-control" />
                <span asp-validation-for="ChoiceString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

